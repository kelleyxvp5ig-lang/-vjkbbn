    <script>
        // å…¨å±€å˜é‡
        let videoPlayer = document.getElementById('videoPlayer');
        let subtitleEnabled = true;
        let lastSubtitleTime = 0;
        let recognition = null;
        let isProcessing = false;
        let speechQueue = [];
        
        // åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            // æ£€æŸ¥ Web Speech API æ”¯æŒ
            if ('webkitSpeechRecognition' in window || 'SpeechRecognition' in window) {
                initSpeechRecognition();
            } else {
                showToast('æ‚¨çš„æµè§ˆå™¨ä¸æ”¯æŒè¯­éŸ³è¯†åˆ«åŠŸèƒ½');
            }
            
            // æ–‡ä»¶é€‰æ‹©äº‹ä»¶
            document.getElementById('videoFile').addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    loadVideoFile(file);
                }
            });
            
            // æ¢å¤è®¾ç½®
            loadSettings();
            
            // è§†é¢‘äº‹ä»¶ç›‘å¬
            videoPlayer.addEventListener('timeupdate', processAudioSegment);
            videoPlayer.addEventListener('play', onVideoPlay);
            videoPlayer.addEventListener('pause', onVideoPause);
            
            // è§¦æ‘¸äº‹ä»¶æ”¯æŒ
            setupTouchEvents();
        });
        
        // åˆå§‹åŒ–è¯­éŸ³è¯†åˆ«
        function initSpeechRecognition() {
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            recognition = new SpeechRecognition();
            
            recognition.continuous = true;
            recognition.interimResults = true;
            recognition.lang = 'en-US';
            
            recognition.onresult = function(event) {
                const transcript = Array.from(event.results)
                    .map(result => result[0].transcript)
                    .join('');
                
                if (transcript && subtitleEnabled) {
                    updateSubtitle(transcript, '');
                    translateText(transcript);
                }
            };
            
            recognition.onerror = function(event) {
                console.error('è¯­éŸ³è¯†åˆ«é”™è¯¯:', event.error);
            };
        }
        
        // åŠ è½½è§†é¢‘æ–‡ä»¶
        function loadVideoFile(file) {
            showLoading();
            
            const url = URL.createObjectURL(file);
            videoPlayer.src = url;
            
            setTimeout(() => {
                hideLoading();
                showToast(`å·²åŠ è½½: ${file.name}`);
            }, 1000);
        }
        
        // å¤„ç†éŸ³é¢‘ç‰‡æ®µ
        function processAudioSegment() {
            if (!subtitleEnabled || isProcessing) return;
            
            const currentTime = videoPlayer.currentTime;
            if (currentTime - lastSubtitleTime > 2) { // æ¯2ç§’å¤„ç†ä¸€æ¬¡
                lastSubtitleTime = currentTime;
                
                // è¿™é‡Œå¯ä»¥æ·»åŠ éŸ³é¢‘æå–å’Œåˆ†æé€»è¾‘
                // ç”±äºWeb APIé™åˆ¶ï¼Œå®Œæ•´çš„éŸ³é¢‘å¤„ç†éœ€è¦åç«¯æ”¯æŒ
            }
        }
        
        // æ›´æ–°å­—å¹•æ˜¾ç¤º
        function updateSubtitle(original, translated) {
            const originalElem = document.getElementById('originalText');
            const translatedElem = document.getElementById('translatedText');
            const style = document.getElementById('subtitleStyle').value;
            
            switch(style) {
                case 'bilingual':
                    originalElem.textContent = original;
                    translatedElem.textContent = translated || 'ç¿»è¯‘ä¸­...';
                    break;
                case 'chinese-only':
                    originalElem.textContent = '';
                    translatedElem.textContent = translated || original;
                    break;
                case 'original-only':
                    originalElem.textContent = original;
                    translatedElem.textContent = '';
                    break;
            }
            
            // æ›´æ–°å­—ä½“å¤§å°
            const fontSize = document.getElementById('fontSize').value;
            document.querySelector('.subtitle').style.fontSize = fontSize + 'px';
        }
        
        // ç¿»è¯‘æ–‡æœ¬
        async function translateText(text) {
            if (!document.getElementById('autoTranslate').checked) return;
            
            const service = document.getElementById('translationService').value;
            const targetLang = document.getElementById('targetLanguage').value;
            
            try {
                const translated = await translateWithService(text, service, targetLang);
                document.getElementById('translatedText').textContent = translated;
            } catch (error) {
                console.error('ç¿»è¯‘å¤±è´¥:', error);
            }
        }
        
        // ä½¿ç”¨ä¸åŒç¿»è¯‘æœåŠ¡
        async function translateWithService(text, service, targetLang) {
            const encodedText = encodeURIComponent(text);
            
            switch(service) {
                case 'google':
                    return await googleTranslate(text, targetLang);
                case 'microsoft':
                    return await microsoftTranslate(text, targetLang);
                case 'deepl':
                    return await deeplTranslate(text, targetLang);
                default:
                    return text;
            }
        }
        
        // Google ç¿»è¯‘
        async function googleTranslate(text, targetLang) {
            const response = await fetch(
                `https://translate.googleapis.com/translate_a/single?client=gtx&sl=auto&tl=${targetLang}&dt=t&q=${encodeURIComponent(text)}`
            );
            const data = await response.json();
            return data[0][0][0];
        }
        
        // æ’­æ”¾æ§åˆ¶
        function togglePlay() {
            if (videoPlayer.paused) {
                videoPlayer.play();
            } else {
                videoPlayer.pause();
            }
        }
        
        function toggleSubtitle() {
            subtitleEnabled = !subtitleEnabled;
            document.getElementById('subtitleDisplay').style.opacity = subtitleEnabled ? 1 : 0;
            showToast(subtitleEnabled ? 'å­—å¹•å·²å¼€å¯' : 'å­—å¹•å·²å…³é—­');
        }
        
        function openSettings() {
            document.getElementById('settingsPanel').style.display = 'flex';
        }
        
        function closeSettings() {
            document.getElementById('settingsPanel').style.display = 'none';
            saveSettings();
        }
        
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    showToast('å…¨å±æ¨¡å¼å¤±è´¥: ' + err.message);
                });
            } else {
                document.exitFullscreen();
            }
        }
        
        // äº‹ä»¶å¤„ç†
        function onVideoPlay() {
            if (recognition && subtitleEnabled) {
                recognition.start();
            }
        }
        
        function onVideoPause() {
            if (recognition) {
                recognition.stop();
            }
        }
        
        // è®¾ç½®ç®¡ç†
        function saveSettings() {
            const settings = {
                targetLanguage: document.getElementById('targetLanguage').value,
                subtitleStyle: document.getElementById('subtitleStyle').value,
                realtimeSubtitle: document.getElementById('realtimeSubtitle').checked,
                autoTranslate: document.getElementById('autoTranslate').checked,
                fontSize: document.getElementById('fontSize').value,
                translationService: document.getElementById('translationService').value
            };
            
            localStorage.setItem('videoTranslatorSettings', JSON.stringify(settings));
        }
        
        function loadSettings() {
            const saved = localStorage.getItem('videoTranslatorSettings');
            if (saved) {
                const settings = JSON.parse(saved);
                
                document.getElementById('targetLanguage').value = settings.targetLanguage;
                document.getElementById('subtitleStyle').value = settings.subtitleStyle;
                document.getElementById('realtimeSubtitle').checked = settings.realtimeSubtitle;
                document.getElementById('autoTranslate').checked = settings.autoTranslate;
                document.getElementById('fontSize').value = settings.fontSize;
                document.getElementById('translationService').value = settings.translationService;
                
                subtitleEnabled = settings.realtimeSubtitle;
                document.getElementById('subtitleDisplay').style.opacity = subtitleEnabled ? 1 : 0;
            }
        }
        
        // æµ‹è¯•åŠŸèƒ½
        function testSubtitle() {
            const testTexts = [
                "Hello, this is a test subtitle.",
                "Welcome to the video translator.",
                "This technology can translate English to Chinese in real time.",
                "Enjoy your viewing experience!"
            ];
            
            let index = 0;
            const testInterval = setInterval(() => {
                if (index >= testTexts.length) {
                    clearInterval(testInterval);
                    return;
                }
                
                updateSubtitle(testTexts[index], "ä½ å¥½ï¼Œè¿™æ˜¯ä¸€ä¸ªæµ‹è¯•å­—å¹•ã€‚");
                translateText(testTexts[index]);
                index++;
            }, 2000);
        }
        
        // UI è¾…åŠ©å‡½æ•°
        function showLoading() {
            document.getElementById('loading').style.display = 'block';
        }
        
        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }
        
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.display = 'block';
            
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }
        
        // è§¦æ‘¸äº‹ä»¶æ”¯æŒ
        function setupTouchEvents() {
            let touchStartY = 0;
            let touchStartX = 0;
            
            document.addEventListener('touchstart', function(e) {
                touchStartY = e.touches[0].clientY;
                touchStartX = e.touches[0].clientX;
            });
            
            document.addEventListener('touchend', function(e) {
                const touchEndY = e.changedTouches[0].clientY;
                const touchEndX = e.changedTouches[0].clientX;
                const diffY = touchStartY - touchEndY;
                const diffX = touchStartX - touchEndX;
                
                // ä¸Šä¸‹æ»‘åŠ¨è°ƒæ•´éŸ³é‡/äº®åº¦
                if (Math.abs(diffY) > 50 && Math.abs(diffY) > Math.abs(diffX)) {
                    // è¿™é‡Œå¯ä»¥æ·»åŠ éŸ³é‡/äº®åº¦æ§åˆ¶
                }
                
                // å·¦å³æ»‘åŠ¨è°ƒæ•´è¿›åº¦
                if (Math.abs(diffX) > 50 && Math.abs(diffX) > Math.abs(diffY)) {
                    if (diffX > 0) {
                        // å‘å·¦æ»‘åŠ¨ï¼Œå¿«é€€
                        videoPlayer.currentTime = Math.max(0, videoPlayer.currentTime - 10);
                    } else {
                        // å‘å³æ»‘åŠ¨ï¼Œå¿«è¿›
                        videoPlayer.currentTime = Math.min(videoPlayer.duration, videoPlayer.currentTime + 10);
                    }
                }
            });
        }
        
        // æ·»åŠ åˆ°ä¸»å±å¹•çš„æç¤º
        if ('standalone' in navigator && !navigator.standalone) {
            setTimeout(() => {
                showToast('ğŸ’¡ æç¤ºï¼šæ·»åŠ åˆ°ä¸»å±å¹•å¯è·å¾—æ›´å¥½ä½“éªŒ');
            }, 3000);
        }
    </script>
